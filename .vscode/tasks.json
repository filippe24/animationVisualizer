// build instruction
{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g", // compile
                //"${file}", // -> the file to compile
                "${workspaceFolder}/*.cpp",  // -> to compile all files
                "${workspaceFolder}/utils/*.cpp",  // -> to compile all files
                // "${workspaceFolder}\\glad.c",
                "-std=c++17", // might be neded for glad glfw
                "-I./include", //include
                "-L./lib", //library
                // "src/\\*.cpp", // source
                "glad.c", // source glad
                "-lglfw3dll", // library glwf
                "-o", // output
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // the path/name/extention of the output
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}